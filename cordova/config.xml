<?xml version='1.0' encoding='utf-8'?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        id        = "com.twotwotwotwo.sevenwonders"
        version   = "2.2"
        android-versionName = "2.2"
        android-versionCode = "4"
    >
    <name>Seven Wonders Assistant</name>
    <description>A scoring assistant for the 7 Wonders board game.</description>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="loadUrlTimeoutValue" value="120000" />

    <plugin name="cordova-plugin-whitelist" version="1" />

    <platform name="android">
        <icon src="res/icon/icon-36-ldpi.png" density="ldpi" />
        <icon src="res/icon/icon-48-mdpi.png" density="mdpi" />
        <icon src="res/icon/icon-72-hdpi.png" density="hdpi" />
        <icon src="res/icon/icon-96-xhdpi.png" density="xhdpi" />
    </platform>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>